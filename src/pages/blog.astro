---
// src/pages/blog.astro
import Layout from '../layouts/Layout.astro';
import { blogPosts } from '../data/blog-posts';

const categoryIcons: Record<string, string> = {
  Design: 'M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z',
  Development: 'M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4',
  SEO: 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6',
};
---

<Layout
  title="Blog"
  description="Insights, tutorial e trend dal mondo del web design e sviluppo. Articoli su performance, SEO, UX design e le tecnologie più innovative del 2026."
>
  <section class="pt-32 pb-20 md:pt-40 container-custom">
    <div class="text-center">
      <span class="text-xs font-mono uppercase tracking-widest text-gray-500 mb-6 block reveal">Insights & Trend</span>
      <h1 class="hero-text text-white mb-8 reveal-scale">Il Mio <br/><span class="text-gray-600">Blog.</span></h1>
      <p class="text-lg md:text-xl text-gray-400 max-w-2xl mx-auto reveal">Idee, approfondimenti e novità dal mondo del digital design e dello sviluppo.</p>
    </div>
  </section>

  <section class="pb-32 container-custom">
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {blogPosts.map((post, index) => (
        <article class="group reveal-scale" style={`transition-delay: ${(index % 3 + 1) * 100}ms`}>
          <div class="glow-border relative bg-gradient-to-br from-white/[0.08] to-transparent border border-white/10 rounded-2xl overflow-hidden transition-all duration-500 hover:border-white/30 hover:bg-white/[0.05]">
            <div class="h-48 bg-white/[0.02] border-b border-white/5 flex items-center justify-center transition-all duration-500 group-hover:bg-white/[0.05]">
              <svg class="w-12 h-12 text-white/20 group-hover:text-white/40 transition-colors duration-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={categoryIcons[post.category] || categoryIcons.Design} />
              </svg>
            </div>
            <div class="p-8">
              <div class="flex items-center gap-3 mb-3">
                <span class="text-xs font-mono uppercase tracking-widest text-gray-500">{new Date(post.date).toLocaleDateString('it-IT', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
                <span class="text-gray-700">·</span>
                <span class="text-xs font-mono text-gray-500">{post.readTime}</span>
              </div>
              <h2 class="text-2xl font-bold text-white mb-4 line-clamp-2 leading-tight group-hover:translate-x-1 transition-transform duration-300">{post.title}</h2>
              <p class="text-gray-400 mb-8 line-clamp-3 text-sm">{post.excerpt}</p>
              <a href={`/blog/${post.slug}`} class="btn-card group/btn">
                <span>Leggi tutto</span>
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="transform group-hover/btn:translate-x-1 transition-transform">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
            <div class="absolute bottom-0 left-0 right-0 h-[2px] bg-gradient-to-r from-transparent via-white/50 to-transparent scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
          </div>
        </article>
      ))}
    </div>
  </section>
</Layout>
