const features = [
  { icon: 'üîç', title: 'Keyword Research', desc: 'Analisi approfondita di cosa cercano i tuoi clienti.' },
  { icon: '‚öôÔ∏è', title: 'Technical SEO', desc: 'Ottimizzazione del codice per i crawler di Google.' },
  { icon: 'üìù', title: 'Content Strategy', desc: 'Contenuti di valore che rispondono ai bisogni degli utenti.' },
  { icon: 'üìç', title: 'Local SEO', desc: 'Fatti trovare dai clienti nella tua zona geografica.' }
];

const chartData = [40, 55, 50, 75, 85, 95];

// Schema.org JSON-LD for Service
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "SEO & Digital Marketing",
  "provider": {
    "@type": "Person",
    "name": "Sebastiano Moniaci"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Italy"
  },
  "description": "Servizi SEO e Digital Growth: keyword research, technical SEO, content strategy e local SEO. Aumenta la visibilit√† organica e domina la SERP.",
  "offers": {
