---
import Layout from '../../layouts/Layout.astro';

const features = [
  { icon: '‚ö°', title: 'Modern Frameworks', desc: 'Utilizzo Astro e Next.js per la massima velocit√†.' },
  { icon: 'üîó', title: 'API Integration', desc: 'Collego il tuo sito a gestionali, CRM e servizi.' },
  { icon: '‚öôÔ∏è', title: 'Custom CMS', desc: 'Pannelli di controllo su misura per i tuoi contenuti.' },
  { icon: 'üìê', title: 'Clean Code', desc: 'Architetture scalabili che crescono con il business.' }
];

const codeSnippet = `function optimizeSite(target) {
  const score = target.audit();
  if (score < 100) {
    applyAstroMagic(target);
  }
  return "üöÄ Ready!";
}`;

// Schema.org JSON-LD for Service
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Web Development",
  "provider": {
    "@type": "Person",
    "name": "Sebastiano Moniaci"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Italy"
  },
  "description": "Sviluppo Web professionale con tecnologie moderne: Astro, React, Next.js. Architetture robuste, codice pulito e performance estreme.",
  "offers": {
    "@type": "Offer",
    "availability": "https://schema.org/InStock"
  }
};
---

<Layout
  title="Sviluppo Web"
  description="Sviluppo Web professionale con tecnologie moderne: Astro, React, Next.js. Architetture robuste, codice pulito e performance estreme. API integration e custom CMS."
>
  <!-- Schema.org JSON-LD for Service -->
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <!-- Hero Section -->
  <section class="pt-32 pb-20 md:pt-48 md:pb-32 container-custom relative overflow-hidden">
    <!-- Background Grid -->
    <div class="absolute inset-0 bg-grid-pattern opacity-35 pointer-events-none"></div>
    <div class="relative z-10">
    <a href="/servizi" class="inline-flex items-center gap-2 text-gray-500 hover:text-white transition-colors mb-8 text-sm font-mono uppercase tracking-widest reveal">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      Torna ai servizi
    </a>
    
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <div>
        <span class="inline-block px-4 py-2 rounded-full bg-emerald-500/10 border border-emerald-500/20 text-emerald-400 text-xs font-mono uppercase tracking-widest mb-6 reveal">
          Development
        </span>
        <h1 class="text-4xl sm:text-5xl md:text-7xl lg:text-8xl font-black text-white mb-8 tracking-tight leading-none reveal-scale">
          Coding di<br/><span class="text-gray-600">Alta Qualit√†.</span>
        </h1>
        <p class="text-lg md:text-xl text-gray-400 leading-relaxed max-w-xl reveal">
          Traduco design complessi in codice pulito, veloce e manutenibile. Future-proof by design.
        </p>
      </div>
      
      <div class="reveal-scale mockup-float-wrapper">
        <!-- Code preview -->
        <div class="glow-border mockup-float relative bg-gradient-to-br from-white/[0.08] to-transparent border border-white/10 rounded-2xl overflow-hidden">
          <!-- Editor header -->
          <div class="flex items-center gap-2 px-4 py-3 border-b border-white/10 bg-white/[0.02]">
            <div class="flex gap-1.5">
              <span class="w-3 h-3 rounded-full bg-red-500/50"></span>
              <span class="w-3 h-3 rounded-full bg-yellow-500/50"></span>
              <span class="w-3 h-3 rounded-full bg-green-500/50"></span>
            </div>
            <span class="text-xs font-mono text-gray-500 ml-4">optimize.js</span>
          </div>
          <!-- Code content -->
          <pre class="p-6 font-mono text-sm text-emerald-400/80 leading-relaxed overflow-x-auto"><code>{codeSnippet}</code></pre>
        </div>
      </div>
    </div>
    </div>
  </section>

  <!-- Features -->
  <section class="py-24 bg-gradient-to-b from-surface/50 to-background border-y border-white/5">
    <div class="container-custom">
      <h2 class="text-3xl md:text-4xl font-black text-white mb-12 reveal-scale">Tecnologie all'Avanguardia</h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {features.map((feature, index) => (
          <div class="group reveal-scale" style={`transition-delay: ${(index + 1) * 100}ms`}>
            <div class="glow-border relative h-full bg-gradient-to-br from-white/[0.08] to-transparent border border-white/10 rounded-2xl p-6 transition-all duration-500 hover:border-white/30 hover:bg-white/[0.05] overflow-hidden">
              <div class="absolute -top-16 -right-16 w-32 h-32 bg-gradient-to-br from-emerald-500/20 to-cyan-500/10 rounded-full blur-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
              
              <span class="text-4xl mb-6 block relative">{feature.icon}</span>
              <h3 class="text-xl font-bold text-white mb-3 group-hover:translate-x-1 transition-transform relative">{feature.title}</h3>
              <p class="font-mono text-sm text-gray-500 group-hover:text-gray-400 transition-colors relative">{feature.desc}</p>
              
              <div class="absolute bottom-0 left-0 right-0 h-[2px] bg-gradient-to-r from-transparent via-emerald-500/50 to-transparent scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 md:py-32 relative overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_80%_60%_at_50%_50%,_var(--tw-gradient-stops))] from-emerald-500/5 via-emerald-500/2 via-30% via-transparent via-60% to-transparent"></div>
    <div class="container-custom relative z-10">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-4xl md:text-5xl font-black text-white mb-6 reveal-scale">Hai un'idea<br/>tecnicamente complessa?</h2>
        <p class="text-gray-400 mb-10 text-lg reveal">Trasformo le sfide tecniche in soluzioni eleganti.</p>
        <a href="/contatti" class="btn-primary reveal">
          Parliamone
        </a>
      </div>
    </div>
  </section>
</Layout>
