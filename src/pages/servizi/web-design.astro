  { icon: 'ðŸ“±', title: 'Responsive Design', desc: 'Ottimizzazione per smartphone, tablet e desktop.' },
  { icon: 'ðŸ”§', title: 'Prototipi Interattivi', desc: 'Vedi il tuo sito prima che venga sviluppato.' },
  { icon: 'ðŸ’Ž', title: 'Brand Integration', desc: 'Coerenza totale con l\'immagine aziendale.' }
];

// Schema.org JSON-LD for Service
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Web Design & UI/UX",
  "provider": {
    "@type": "Person",
    "name": "Sebastiano Moniaci"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Italy"
  },
  "description": "Servizi di Web Design e UI/UX professionali. Interfacce di lusso, micro-interazioni fluide e design system scalabili per brand che vogliono distinguersi.",
  "offers": {
    "@type": "Offer",
    "availability": "https://schema.org/InStock"
  }
