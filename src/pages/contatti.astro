---
// src/pages/contatti.astro
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';

const contactMethods = [
{ label: 'Email', value: 'hello@studio.com', href: 'mailto:hello@studio.com' },
{ label: 'Telefono', value: '+39 02 1234 5678', href: 'tel:+390212345678' },
{ label: 'Studio', value: 'Milano, Italia', href: '#' }
];
---

<Layout
  title="Contatti"
  description="Hai un progetto in mente? Contatta Studio Digitale per una consulenza gratuita. Trasformiamo idee in esperienze digitali di successo. Milano • Roma • Remote."
>
    <div class="pt-32 pb-20 md:pt-40 md:pb-32 container-custom">
        <div class="grid lg:grid-cols-2 gap-20">
            <div>
                <span
                    class="text-xs font-mono uppercase tracking-widest text-gray-500 mb-6 block reveal">Contatti</span>
                <h1
                    class="text-5xl md:text-7xl lg:text-8xl font-black text-white mb-8 tracking-tight leading-none reveal-scale">
                    Parliamo <br /> di futuro.
                </h1>
                <p class="text-lg md:text-xl text-gray-400 mb-16 max-w-md leading-relaxed reveal">
                    Siamo sempre alla ricerca di nuove sfide. Scrivici per discutere del tuo prossimo progetto digitale.
                </p>

                <div class="grid md:grid-cols-2 gap-12">
                    <div class="grid gap-8">
                        {contactMethods.map((method, index) => (
                        <div class={`border-b border-white/10 pb-8 group reveal delay-${(index + 1) * 100 + 200}`}>
                            <span
                                class="text-xs font-mono uppercase text-gray-600 mb-2 block group-hover:text-gray-400 transition-colors">{method.label}</span>
                            <a href={method.href}
                                class="text-2xl md:text-3xl text-white font-bold hover:text-gray-300 transition-colors inline-flex items-center gap-3 group-hover:translate-x-1 transition-transform">
                                {method.value}
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2" class="opacity-0 group-hover:opacity-100 transition-opacity">
                                    <path d="M7 17l9.2-9.2M17 17V7H7" />
                                </svg>
                            </a>
                        </div>
                        ))}
                    </div>

                    <div class="hidden md:block reveal">
                        <div
                            class="relative bg-gradient-to-br from-white/[0.05] to-transparent border border-white/10 rounded-2xl overflow-hidden h-full">
                            <div class="flex items-center gap-2 px-4 py-3 border-b border-white/10 bg-white/[0.02]">
                                <div class="flex gap-1.5">
                                    <span class="w-2 h-2 rounded-full bg-blue-500/30"></span>
                                    <span class="w-2 h-2 rounded-full bg-indigo-500/30"></span>
                                    <span class="w-2 h-2 rounded-full bg-purple-500/30"></span>
                                </div>
                                <span class="text-[10px] font-mono text-gray-600 ml-auto">connection.status</span>
                            </div>
                            <div class="p-6 font-mono text-xs space-y-4">
                                <div class="flex gap-2">
                                    <span class="text-blue-500">></span>
                                    <span class="text-gray-400">ping remote_studio</span>
                                </div>
                                <div class="text-blue-400/60 pl-4">64 bytes from studio.com: icmp_seq=1 ttl=64
                                    time=0.042 ms</div>
                                <div class="flex gap-2">
                                    <span class="text-blue-500">></span>
                                    <span class="text-gray-400">auth_session --secure</span>
                                </div>
                                <div class="text-emerald-500/80 bg-emerald-500/5 px-2 py-1 rounded w-fit">STATUS:
                                    ENCRYPTED</div>
                                <div class="pt-4 text-gray-600 italic">Waiting for your message...</div>
                                <div class="flex gap-1">
                                    <span class="w-2 h-4 bg-blue-500/50 animate-pulse"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="lg:pt-20 reveal-scale">
                <ContactForm />
            </div>
        </div>
    </div>
</Layout>