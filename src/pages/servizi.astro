---
// src/pages/servizi.astro
import Layout from '../layouts/Layout.astro';

const pageDescription = "I servizi di Sebastiano Moniaci: Web Design & UI/UX, Sviluppo Web, E-commerce, SEO & Growth, Performance Optimization e Digital Ads. Soluzioni complete per il tuo business digitale.";

const servizi = [
{
nome: 'Web Design',
descrizione: `Interfacce di lusso. Micro-interazioni fluide. Design System scalabili.`,
icon: '01',
color: 'from-blue-500/20 to-purple-500/10',
link: '/servizi/web-design'
},
{
nome: 'Engineering',
descrizione: `Architetture robuste. Astro, React, Node.js. Codice a prova di futuro.`,
icon: '02',
color: 'from-emerald-500/20 to-cyan-500/10',
link: '/servizi/sviluppo-web'
},
{
nome: 'SEO & Growth',
descrizione: `Visibilità organica. Strategie content-first. Analytics avanzata.`,
icon: '03',
color: 'from-orange-500/20 to-yellow-500/10',
link: '/servizi/seo'
},
{
nome: 'E-commerce',
descrizione: `Esperienze d'acquisto senza attrito. Shopify & Custom solutions.`,
icon: '04',
color: 'from-pink-500/20 to-rose-500/10',
link: '/servizi/ecommerce'
},
{
nome: 'Performance',
descrizione: `Ottimizzazione Core Web Vitals. Load time istantanei.`,
icon: '05',
color: 'from-violet-500/20 to-indigo-500/10',
link: '/servizi/performance'
},
{
nome: 'Digital Ads',
descrizione: `Campagne mirate su Google e Social. Strategie data-driven per massimizzare ROI.`,
icon: '06',
color: 'from-amber-500/20 to-orange-500/10',
link: '/servizi/ads'
}
];
---

<Layout
    title="Servizi"
    description={pageDescription}
>
    <section class="pt-32 pb-20 md:pt-48 md:pb-32 container-custom">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
            <div class="max-w-4xl">
                <span class="text-xs font-mono uppercase tracking-widest text-gray-500 mb-6 block reveal">Le mie
                    competenze</span>
                <h1 class="hero-text text-white mb-8 reveal-scale">Servizi <br /><span
                        class="text-gray-600">Esclusivi.</span></h1>
                <p class="text-lg md:text-xl text-gray-400 max-w-2xl border-l-2 border-white/30 pl-6 reveal">
                    Soluzioni digitali sartoriali. Ogni progetto è unico, ogni riga di codice è scritta con intenti precisi.
                </p>
            </div>

            <div class="hidden lg:block reveal-scale mockup-float-wrapper">
                <div class="glow-border mockup-float relative bg-gradient-to-br from-white/[0.08] to-transparent border border-white/10 rounded-2xl overflow-hidden">
                    <!-- Header -->
                    <div class="flex items-center gap-2 px-4 py-3 border-b border-white/10 bg-white/[0.02]">
                        <div class="flex gap-1.5">
                            <span class="w-2 h-2 rounded-full bg-white/10"></span>
                            <span class="w-2 h-2 rounded-full bg-white/10"></span>
                            <span class="w-2 h-2 rounded-full bg-white/10"></span>
                        </div>
                        <span class="text-[10px] font-mono text-gray-600 ml-auto">services.overview</span>
                    </div>
                    <!-- Mini service grid -->
                    <div class="p-5 grid grid-cols-2 gap-3">
                        {servizi.slice(0, 4).map((s) => (
                            <div class="border border-white/[0.06] rounded-lg p-4 bg-white/[0.02]">
                                <div class="flex items-center gap-2 mb-3">
                                    <div class="w-7 h-7 rounded-md bg-white/5 border border-white/10 flex items-center justify-center">
                                        <span class="font-mono text-[10px] font-bold text-gray-500">{s.icon}</span>
                                    </div>
                                    <span class="text-xs font-bold text-white">{s.nome}</span>
                                </div>
                                <div class="h-1 bg-white/5 rounded-full overflow-hidden">
                                    <div class={`h-full rounded-full bg-gradient-to-r ${s.color.replace('/20', '/40').replace('/10', '/30')}`} style="width: 85%"></div>
                                </div>
                            </div>
                        ))}
                    </div>
                    <!-- Stats row -->
                    <div class="px-5 pb-5">
                        <div class="border border-white/[0.06] rounded-lg p-4 bg-white/[0.02] flex justify-between items-center">
                            <div class="text-center">
                                <div class="text-lg font-bold text-white">50+</div>
                                <div class="text-[9px] font-mono text-gray-600 uppercase">Progetti</div>
                            </div>
                            <div class="w-px h-8 bg-white/10"></div>
                            <div class="text-center">
                                <div class="text-lg font-bold text-white">100</div>
                                <div class="text-[9px] font-mono text-gray-600 uppercase">Lighthouse</div>
                            </div>
                            <div class="w-px h-8 bg-white/10"></div>
                            <div class="text-center">
                                <div class="text-lg font-bold text-white">98%</div>
                                <div class="text-[9px] font-mono text-gray-600 uppercase">Soddisfatti</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="py-24 bg-gradient-to-b from-surface/50 to-background border-y border-white/5">
        <div class="container-custom">
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                {servizi.map((servizio, index) => (
                <a href={servizio.link} class={`service-card group block reveal-scale delay-${(index % 3 + 1) * 100}`}>
                    <!-- Card Container -->
                    <div
                        class="glow-border relative h-full bg-gradient-to-br from-white/[0.08] to-transparent border border-white/10 rounded-2xl p-8 transition-all duration-500 hover:border-white/30 hover:bg-white/[0.05] overflow-hidden">

                        <!-- Gradient Glow Background -->
                        <div class={`absolute -top-24 -right-24 w-48 h-48 bg-gradient-to-br ${servizio.color}
                            rounded-full blur-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-700`}>
                        </div>

                        <!-- Icon Badge -->
                        <div class="flex justify-between items-start mb-10 relative">
                            <div
                                class="w-14 h-14 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center group-hover:bg-white/10 group-hover:border-white/20 transition-all duration-300">
                                <span
                                    class="font-mono text-sm font-bold text-gray-400 group-hover:text-white transition-colors">{servizio.icon}</span>
                            </div>
                            <div
                                class="w-10 h-10 rounded-full bg-white/0 group-hover:bg-white flex items-center justify-center transition-all duration-300 opacity-0 group-hover:opacity-100 translate-x-4 group-hover:translate-x-0">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2.5" class="text-black">
                                    <path d="M7 17l9.2-9.2M17 17V7H7" />
                                </svg>
                            </div>
                        </div>

                        <!-- Content -->
                        <h2
                            class="text-2xl md:text-3xl font-bold uppercase mb-4 text-white group-hover:translate-x-1 transition-transform duration-300 relative">
                            {servizio.nome}
                        </h2>
                        <p
                            class="font-mono text-sm text-gray-500 mb-8 leading-relaxed group-hover:text-gray-400 transition-colors relative">
                            {servizio.descrizione}
                        </p>

                        <!-- Bottom Link -->
                        <div
                            class="flex items-center gap-2 text-gray-500 group-hover:text-white transition-colors relative">
                            <span class="text-xs font-bold uppercase tracking-widest">Approfondisci</span>
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2.5" class="transform group-hover:translate-x-1 transition-transform">
                                <path d="M5 12h14M12 5l7 7-7 7" />
                            </svg>
                        </div>

                        <!-- Bottom Border Animation -->
                        <div
                            class="absolute bottom-0 left-0 right-0 h-[2px] bg-gradient-to-r from-transparent via-white/50 to-transparent scale-x-0 group-hover:scale-x-100 transition-transform duration-500">
                        </div>
                    </div>
                </a>
                ))}
            </div>
        </div>
    </section>

    <section class="py-32 relative overflow-hidden">
        <div
            class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-white/5 via-transparent to-transparent">
        </div>
        <div class="container-custom flex flex-col items-center text-center relative z-10">
            <h2 class="text-4xl md:text-6xl lg:text-7xl font-black uppercase mb-8 text-white reveal-scale">Hai una
                visione?</h2>
            <p class="text-gray-400 mb-12 max-w-xl text-lg md:text-xl reveal">
                Trasformo problemi complessi in soluzioni semplici, eleganti e potenti.
            </p>
            <a href="/contatti" class="btn-primary reveal">
                Inizia Progetto
            </a>
        </div>
    </section>
</Layout>