---
// src/pages/404.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Pagina Non Trovata" description="La pagina che stai cercando non esiste o è stata spostata." noindex={true}>
  <div class="min-h-screen flex items-center justify-center relative overflow-hidden">
    <!-- Background effects -->
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-red-500/10 via-transparent to-transparent"></div>
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-red-500/5 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-orange-500/5 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>

    <div class="container-custom text-center relative z-10 py-20">
      <!-- 404 Number with glitch effect -->
      <div class="mb-8 reveal-scale">
        <div class="relative inline-block">
          <h1 class="text-[150px] md:text-[250px] lg:text-[350px] font-black leading-none text-white/10 select-none">
            404
          </h1>
          <div class="absolute inset-0 flex items-center justify-center">
            <span class="text-6xl md:text-8xl font-black text-white animate-pulse">
              404
            </span>
          </div>
        </div>
      </div>

      <!-- Error Message -->
      <div class="max-w-2xl mx-auto mb-12 reveal">
        <h2 class="text-3xl md:text-5xl font-bold text-white mb-6">
          Oops! <span class="text-gray-600">Pagina non trovata.</span>
        </h2>
        <p class="text-lg text-gray-400 leading-relaxed">
          La pagina che stai cercando non esiste o è stata spostata.
          Ma non preoccuparti, possiamo aiutarti a trovare quello che cerchi.
        </p>
      </div>

      <!-- Quick Links -->
      <div class="max-w-4xl mx-auto mb-16 reveal">
        <p class="text-sm font-mono text-gray-500 uppercase tracking-widest mb-8">
          Link Utili
        </p>
        <div class="grid md:grid-cols-3 gap-6">
          <!-- Link 1 -->
          <a href="/" class="glow-border relative group bg-gradient-to-br from-white/[0.08] to-transparent border border-white/10 rounded-2xl p-8 transition-all duration-300 hover:border-white/30 hover:bg-white/[0.05] hover:scale-105">
            <div class="w-12 h-12 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center mb-4 group-hover:bg-white/10 transition-all">
              <svg class="w-6 h-6 text-gray-400 group-hover:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">Homepage</h3>
            <p class="text-sm text-gray-500">Torna alla home</p>
          </a>

          <!-- Link 2 -->
          <a href="/servizi" class="glow-border relative group bg-gradient-to-br from-white/[0.08] to-transparent border border-white/10 rounded-2xl p-8 transition-all duration-300 hover:border-white/30 hover:bg-white/[0.05] hover:scale-105">
            <div class="w-12 h-12 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center mb-4 group-hover:bg-white/10 transition-all">
              <svg class="w-6 h-6 text-gray-400 group-hover:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">Servizi</h3>
            <p class="text-sm text-gray-500">Scopri cosa facciamo</p>
          </a>

          <!-- Link 3 -->
          <a href="/contatti" class="glow-border relative group bg-gradient-to-br from-white/[0.08] to-transparent border border-white/10 rounded-2xl p-8 transition-all duration-300 hover:border-white/30 hover:bg-white/[0.05] hover:scale-105">
            <div class="w-12 h-12 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center mb-4 group-hover:bg-white/10 transition-all">
              <svg class="w-6 h-6 text-gray-400 group-hover:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">Contatti</h3>
            <p class="text-sm text-gray-500">Parliamo del tuo progetto</p>
          </a>
        </div>
      </div>

      <!-- Back Button -->
      <div class="reveal">
        <button onclick="history.back()" class="btn-secondary">
          <svg class="w-5 h-5 mr-2 inline" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Torna Indietro
        </button>
      </div>

      <!-- Fun ASCII art -->
      <div class="mt-20 reveal">
        <pre class="font-mono text-xs text-gray-600 inline-block text-left">
{`    ___
   /   \\
  | o o |  Pagina non trovata!
   \\   /
    ---    `}
        </pre>
      </div>
    </div>
  </div>

  <style>
    @keyframes glitch {
      0% { transform: translate(0); }
      20% { transform: translate(-2px, 2px); }
      40% { transform: translate(-2px, -2px); }
      60% { transform: translate(2px, 2px); }
      80% { transform: translate(2px, -2px); }
      100% { transform: translate(0); }
    }
  </style>
</Layout>
