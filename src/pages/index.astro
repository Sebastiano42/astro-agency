---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';

import TechStackMarquee from '../components/TechStackMarquee.astro';

const services = [
  { icon: '01', title: 'Design System', desc: 'Linguaggi visivi scalabili per prodotti digitali complessi.', color: 'from-blue-500/20 to-purple-500/10', href: '/servizi/web-design' },
  { icon: '02', title: 'Sviluppo Web', desc: 'Performance ossessiva. Stack moderni (Astro, React).', color: 'from-emerald-500/20 to-cyan-500/10', href: '/servizi/sviluppo-web' },
  { icon: '03', title: 'E-commerce', desc: "Esperienze d'acquisto senza attrito. Shopify & Custom solutions.", color: 'from-orange-500/20 to-amber-500/10', href: '/servizi/ecommerce' },
  { icon: '04', title: 'Growth', desc: 'SEO tecnica e conversion rate optimization guidata dai dati.', color: 'from-violet-500/20 to-pink-500/10', href: '/servizi/seo' },
];

const stats = [
  { value: '50+', label: 'Progetti Consegnati' },
  { value: '98%', label: 'Clienti Soddisfatti' },
  { value: '100', label: 'Lighthouse Score' }
];

const portfolioPreview = [
  { title: 'E-commerce Luxury', category: 'Sviluppo', color: 'from-blue-500 to-purple-500' },
  { title: 'App Fintech', category: 'Mobile', color: 'from-emerald-500 to-cyan-500' },
  { title: 'Studio Architettura', category: 'Branding', color: 'from-orange-500 to-amber-500' },
];

const steps = [
  { number: '01', title: 'Discovery', desc: 'Analizzo il tuo business, i competitor e gli obiettivi. Definisco la strategia giusta.' },
  { number: '02', title: 'Design', desc: 'Creo wireframe e mockup interattivi. Ogni pixel ha uno scopo preciso.' },
  { number: '03', title: 'Sviluppo', desc: 'Traduco il design in codice pulito, veloce e ottimizzato per la SEO.' },
  { number: '04', title: 'Lancio', desc: 'Deploy, testing finale e monitoraggio. Il progetto va live senza intoppi.' },
];

const testimonials = [
  { quote: 'Sebastiano ha trasformato la nostra presenza online. Il sito è velocissimo e le conversioni sono aumentate del 40%.', name: 'Marco R.', role: 'CEO, TechStartup', stars: 5 },
  { quote: 'Professionalità e attenzione ai dettagli incredibili. Ha capito subito la nostra visione e l\'ha superata.', name: 'Laura B.', role: 'Founder, Fashion Brand', stars: 5 },
  { quote: 'Il miglior investimento digitale che abbiamo fatto. ROI triplicato in 6 mesi grazie al nuovo e-commerce.', name: 'Andrea T.', role: 'Direttore, Retail Group', stars: 5 },
];
---

<Layout
  title="Home"
  description="Sebastiano Moniaci: Web Design, Sviluppo e Digital Marketing a Rovigo. Creo esperienze digitali che trasformano brand in leader di mercato. Performance, design e risultati tangibili."
  ogType="website"
>
  <!-- HERO SECTION -->
  <section class="relative min-h-[90vh] flex items-center pt-32 pb-20 overflow-hidden">
    <!-- Background Effects -->
    <div class="absolute inset-0 bg-background z-0">
        <div class="absolute top-[30%] left-[50%] -translate-x-1/2 -translate-y-1/2 w-[80vw] h-[80vw] max-w-[600px] max-h-[600px] bg-white/5 rounded-full blur-[100px] pointer-events-none animate-pulse-slow"></div>
        <div class="absolute bottom-0 right-0 w-full h-full bg-grid-pattern opacity-10"></div>
    </div>

    <div class="container-custom relative z-10 w-full">
      <div class="max-w-5xl mx-auto md:mx-0">
        <div class="flex items-center justify-center md:justify-start gap-3 mb-8 reveal">
            <span class="w-8 md:w-12 h-[1px] bg-white/30 hidden md:block"></span>
            <span class="text-[10px] md:text-xs font-mono uppercase tracking-widest text-gray-400 bg-white/5 px-3 py-1 rounded-full md:bg-transparent md:p-0 border border-white/10 md:border-none">Available for 2026</span>
        </div>

        <h1 class="hero-text text-white mb-8 md:mb-10 text-center md:text-left reveal">
          Costruisco <br/>
          <span class="text-gray-500">il futuro</span> digitale.
        </h1>

        <p class="text-base md:text-xl text-gray-400 max-w-xl mx-auto md:mx-0 leading-relaxed mb-10 md:mb-12 text-center md:text-left reveal">
          Freelance web designer e developer focalizzato sulla creazione di esperienze digitali d'élite. Minimalismo, velocità e precisione.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start reveal">
            <a href="/contatti" class="btn-primary w-full sm:w-auto">
              Inizia Progetto
            </a>
            <a href="/portfolio" class="btn-outline w-full sm:w-auto">
              Esplora Lavori
            </a>
        </div>
      </div>
    </div>
  </section>

  <!-- MARQUEE LINE -->
  <div class="border-y border-white/5 bg-surface/30 py-6 overflow-hidden reveal">
      <div class="inline-flex animate-marquee whitespace-nowrap">
          <span class="text-xs md:text-sm font-mono uppercase tracking-[0.3em] md:tracking-[0.5em] text-gray-500 mx-4 md:mx-8">Strategy • Design • Development • Growth •</span>
          <span class="text-xs md:text-sm font-mono uppercase tracking-[0.3em] md:tracking-[0.5em] text-gray-500 mx-4 md:mx-8">Strategy • Design • Development • Growth •</span>
          <span class="text-xs md:text-sm font-mono uppercase tracking-[0.3em] md:tracking-[0.5em] text-gray-500 mx-4 md:mx-8">Strategy • Design • Development • Growth •</span>
          <span class="text-xs md:text-sm font-mono uppercase tracking-[0.3em] md:tracking-[0.5em] text-gray-500 mx-4 md:mx-8">Strategy • Design • Development • Growth •</span>
      </div>
  </div>

  <!-- SERVICES PREVIEW -->
  <section class="py-24 md:py-36 relative">
    <div class="container-custom">
      <div class="flex flex-col md:flex-row justify-between items-center md:items-end mb-16 md:mb-24 text-center md:text-left">
        <h2 class="text-4xl md:text-6xl lg:text-7xl font-black text-white mb-6 md:mb-0 reveal-scale">Competenze</h2>
        <a href="/servizi" class="text-sm font-mono uppercase tracking-widest text-gray-400 border-b border-gray-700 pb-1 hover:text-white hover:border-white transition-all duration-300 link-underline reveal">Tutti i Servizi</a>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
        {services.map((item, index) => (
          <a href={item.href} aria-label={`Scopri il servizio ${item.title}`} class={`group text-center md:text-left reveal-scale h-full flex flex-col`}>
            <div class="glow-border relative h-full bg-gradient-to-br from-white/[0.08] to-transparent border border-white/10 rounded-2xl p-8 transition-all duration-500 hover:border-white/30 hover:bg-white/[0.05] overflow-hidden flex flex-col">
              <!-- Gradient Glow Effect -->
              <div class={`absolute -top-20 -right-20 w-40 h-40 bg-gradient-to-br ${item.color} rounded-full blur-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-700`}></div>

              <!-- Number Badge -->
              <div class="relative mb-10 md:mb-12">
                <div class="w-12 h-12 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center group-hover:bg-white/10 group-hover:border-white/20 transition-all duration-300">
                  <span class="font-mono text-sm font-bold text-gray-400 group-hover:text-white transition-colors">{item.icon}</span>
                </div>
              </div>

              <!-- Title with hover effect -->
              <h3 class="text-xl md:text-2xl font-bold text-white mb-4 group-hover:translate-x-1 transition-transform duration-300 relative">
                {item.title}
              </h3>

              <!-- Description -->
              <p class="text-sm md:text-base text-gray-500 leading-relaxed group-hover:text-gray-400 transition-colors duration-500 flex-grow relative">
                {item.desc}
              </p>

              <!-- Arrow Icon - Animated -->
              <div class="mt-6 pt-6 border-t border-white/5 group-hover:border-white/20 transition-colors duration-500 relative">
                <div class="flex items-center justify-center md:justify-start gap-2 text-gray-500 group-hover:text-white transition-colors duration-300">
                  <span class="text-xs font-mono uppercase tracking-wider opacity-0 group-hover:opacity-100 transition-opacity duration-300">Scopri</span>
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="transform translate-x-0 translate-y-0 group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform duration-300">
                    <path d="M7 17l9.2-9.2M17 17V7H7"/>
                  </svg>
                </div>
              </div>

              <!-- Bottom Border Animation -->
              <div class="absolute bottom-0 left-0 right-0 h-[2px] bg-gradient-to-r from-transparent via-white/50 to-transparent scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- TECH & DESIGN STACK MARQUEE -->
  <TechStackMarquee />

  <!-- PORTFOLIO PREVIEW -->
  <section class="py-24 md:py-36 relative">
    <div class="container-custom">
      <div class="flex flex-col md:flex-row justify-between items-center md:items-end mb-16 md:mb-24 text-center md:text-left">
        <h2 class="text-4xl md:text-6xl lg:text-7xl font-black text-white mb-6 md:mb-0 reveal-scale">Lavori Recenti</h2>
        <a href="/portfolio" class="text-sm font-mono uppercase tracking-widest text-gray-400 border-b border-gray-700 pb-1 hover:text-white hover:border-white transition-all duration-300 link-underline reveal">Vedi tutti i lavori</a>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {portfolioPreview.map((project, index) => (
          <a href="/portfolio" class="group reveal-scale" style={`transition-delay: ${(index + 1) * 100}ms`}>
            <div class="glow-border relative bg-gradient-to-br from-white/[0.08] to-transparent border border-white/10 rounded-2xl overflow-hidden transition-all duration-500 hover:border-white/30 hover:bg-white/[0.05]">
              <!-- Image Placeholder with Gradient -->
              <div class="aspect-video relative overflow-hidden bg-white/[0.02]">
                <div class={`absolute inset-0 bg-gradient-to-br ${project.color} opacity-20 group-hover:opacity-40 transition-opacity duration-500`}></div>
                <div class="absolute inset-0 flex items-center justify-center">
                  <svg class="w-12 h-12 text-white/20 group-hover:text-white/40 transition-colors duration-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
              </div>
              <!-- Content -->
              <div class="p-6">
                <span class="font-mono text-[10px] font-bold uppercase tracking-widest text-gray-500 group-hover:text-gray-300 transition-colors">
                  {project.category}
                </span>
                <h3 class="text-xl md:text-2xl font-bold text-white mt-2 group-hover:translate-x-1 transition-transform duration-300">
                  {project.title}
                </h3>
              </div>
              <!-- Bottom Border Animation -->
              <div class="absolute bottom-0 left-0 right-0 h-[2px] bg-gradient-to-r from-transparent via-white/50 to-transparent scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- STATS -->
  <section class="py-20 md:py-24 border-y border-white/5 relative overflow-hidden">
    <!-- Background Grid -->
    <div class="absolute inset-0 bg-grid-pattern opacity-35 pointer-events-none"></div>
    <div class="container-custom relative z-10">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-16 text-center reveal">
        {stats.map((stat, index) => (
          <div class={`flex flex-col items-center gap-4 group hover:-translate-y-2 transition-transform duration-300`}>
            <div class="text-6xl md:text-8xl font-semibold text-white tracking-tight group-hover:text-gray-300 transition-colors">{stat.value}</div>
            <div class="text-sm uppercase tracking-wider text-gray-400 leading-relaxed">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- COME LAVORO -->
  <section class="py-24 md:py-36 relative">
    <div class="container-custom">
      <div class="text-center mb-16 md:mb-24">
        <span class="inline-block px-4 py-2 rounded-full bg-white/5 border border-white/10 text-gray-400 text-xs font-mono uppercase tracking-widest mb-6 reveal">Processo</span>
        <h2 class="text-4xl md:text-6xl lg:text-7xl font-black text-white mb-6 reveal-scale">Come Lavoro</h2>
        <p class="text-lg md:text-xl text-gray-400 max-w-2xl mx-auto reveal">Un processo chiaro e trasparente, dalla prima call al lancio del progetto.</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8 relative">
        {steps.map((step, index) => (
          <div class="group reveal-scale" style={`transition-delay: ${(index + 1) * 100}ms`}>
            <div class="glow-border relative h-full bg-gradient-to-br from-white/[0.08] to-transparent border border-white/10 rounded-2xl p-8 transition-all duration-500 hover:border-white/30 hover:bg-white/[0.05] overflow-hidden">
              <!-- Gradient Glow -->
              <div class={`absolute -top-20 -right-20 w-40 h-40 bg-gradient-to-br ${index === 0 ? 'from-blue-500/20 to-cyan-500/10' : index === 1 ? 'from-violet-500/20 to-purple-500/10' : index === 2 ? 'from-emerald-500/20 to-teal-500/10' : 'from-orange-500/20 to-amber-500/10'} rounded-full blur-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-700`}></div>

              <!-- Step Number -->
              <div class="relative mb-8">
                <div class="w-12 h-12 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center group-hover:bg-white/10 group-hover:border-white/20 transition-all duration-300">
                  <span class="font-mono text-sm font-bold text-gray-400 group-hover:text-white transition-colors">{step.number}</span>
                </div>
              </div>

              <!-- Content -->
              <h3 class="text-xl md:text-2xl font-bold text-white mb-4 group-hover:translate-x-1 transition-transform duration-300 relative">
                {step.title}
              </h3>
              <p class="text-sm text-gray-500 leading-relaxed group-hover:text-gray-400 transition-colors relative">
                {step.desc}
              </p>

              <!-- Bottom Border Animation -->
              <div class={`absolute bottom-0 left-0 right-0 h-[2px] bg-gradient-to-r from-transparent ${index === 0 ? 'via-blue-500/50' : index === 1 ? 'via-violet-500/50' : index === 2 ? 'via-emerald-500/50' : 'via-orange-500/50'} to-transparent scale-x-0 group-hover:scale-x-100 transition-transform duration-500`}></div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- TESTIMONIALS -->
  <section class="py-24 md:py-36 border-y border-white/5 relative overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-white/5 via-transparent to-transparent"></div>
    <!-- Background Grid -->
    <div class="absolute inset-0 bg-grid-pattern-sm opacity-30 pointer-events-none"></div>
    <div class="container-custom relative z-10">
      <div class="text-center mb-16 md:mb-24">
        <h2 class="text-4xl md:text-6xl lg:text-7xl font-black text-white mb-6 reveal-scale">Dicono di Me</h2>
        <p class="text-lg md:text-xl text-gray-400 max-w-2xl mx-auto reveal">La soddisfazione dei clienti è la mia migliore referenza.</p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {testimonials.map((testimonial, index) => (
          <div class="group reveal-scale" style={`transition-delay: ${(index + 1) * 100}ms`}>
            <div class="relative h-full bg-white/[0.03] backdrop-blur-sm border border-white/10 rounded-2xl p-8 transition-all duration-500 hover:border-white/20 hover:bg-white/[0.06] overflow-hidden">
              <!-- Decorative Quote -->
              <div class="absolute -top-2 -left-1 text-8xl font-black text-white/[0.05] leading-none select-none pointer-events-none">"</div>

              <!-- Stars -->
              <div class="flex gap-1 mb-6 relative">
                {Array.from({ length: testimonial.stars }).map(() => (
                  <svg class="w-5 h-5 text-amber-500" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>

              <!-- Quote -->
              <p class="text-gray-300 leading-relaxed mb-8 relative text-sm md:text-base">
                "{testimonial.quote}"
              </p>

              <!-- Author -->
              <div class="flex items-center gap-3 relative">
                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-white/20 to-white/5 border border-white/10 flex items-center justify-center">
                  <span class="text-sm font-bold text-white">{testimonial.name[0]}</span>
                </div>
                <div>
                  <p class="text-sm font-medium text-white">{testimonial.name}</p>
                  <p class="text-xs text-gray-500">{testimonial.role}</p>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 md:py-32 relative overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-white/5 via-transparent to-transparent"></div>
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-16 relative z-10 items-center">
          <div class="text-center md:text-left reveal">
            <h2 class="text-4xl md:text-6xl lg:text-7xl font-black text-white mb-6 md:mb-8 leading-none">
              Iniziamo qualcosa <br/> di <span class="text-gray-600">unico.</span>
            </h2>
            <p class="text-gray-400 mb-10 md:mb-12 max-w-md mx-auto md:mx-0 leading-relaxed text-base md:text-lg">
              Hai un progetto che richiede una visione precisa? Parliamone. Sono qui per elevare il tuo brand.
            </p>
            <div class="flex flex-col md:flex-row gap-4 md:gap-8 justify-center md:justify-start text-sm text-gray-500 font-mono mb-8 md:mb-0">
                <p>• Analisi Gratuita</p>
                <p>• Strategia Personalizzata</p>
                <p>• Nessun Impegno</p>
            </div>
          </div>

          <div class="w-full reveal">
             <ContactForm />
          </div>
        </div>
    </div>
  </section>

</Layout>
