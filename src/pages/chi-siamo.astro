---
// src/pages/chi-siamo.astro
import Layout from '../layouts/Layout.astro';

const values = [
  { icon: '01', title: 'Velocità', desc: 'Codice ottimizzato per performance istantanee. Nessun compromesso.', color: 'from-blue-500/20 to-cyan-500/10' },
  { icon: '02', title: 'Precisione', desc: 'Pixel perfect. Curiamo ogni dettaglio, anche quelli invisibili.', color: 'from-emerald-500/20 to-green-500/10' },
  { icon: '03', title: 'Impatto', desc: 'Design che lascia il segno. Rifiutiamo la mediocrità.', color: 'from-orange-500/20 to-amber-500/10' },
  { icon: '04', title: 'Trasparenza', desc: 'Processi chiari. Comunicazione diretta. Partner, non fornitori.', color: 'from-violet-500/20 to-purple-500/10' }
];
---

<Layout
  title="Chi Siamo"
  description="Siamo Studio Digitale, un team di designer e developer che costruisce asset digitali per brand ambiziosi. Dalla strategia al codice, creiamo esperienze che lasciano il segno."
>
  <div class="pt-32 pb-20 md:pt-40 container-custom">
      <span class="text-xs font-mono uppercase tracking-widest text-gray-500 mb-6 block reveal">Dal 2024</span>
      
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
           <h1 class="hero-text text-white mb-8 reveal-scale">
            Siamo <br/> <span class="text-gray-600">Studio.</span>
          </h1>
          <p class="text-lg md:text-xl text-gray-400 leading-relaxed max-w-xl reveal">
            Non costruiamo solo siti web. Costruiamo asset digitali per brand che vogliono dominare il loro mercato. Nati dal codice, elevati dal design.
          </p>
        </div>
        
        <div class="relative hidden lg:block reveal-scale">
           <!-- Terminal Mockup -->
           <div class="relative bg-gradient-to-br from-white/[0.08] to-transparent border border-white/10 rounded-2xl overflow-hidden">
              <!-- Terminal header -->
              <div class="flex items-center gap-2 px-4 py-3 border-b border-white/10 bg-white/[0.02]">
                <div class="flex gap-1.5">
                  <span class="w-3 h-3 rounded-full bg-red-500/50"></span>
                  <span class="w-3 h-3 rounded-full bg-yellow-500/50"></span>
                  <span class="w-3 h-3 rounded-full bg-green-500/50"></span>
                </div>
                <span class="text-xs font-mono text-gray-500 ml-4">studio@terminal</span>
              </div>
              <!-- Terminal content -->
              <div class="p-6 font-mono text-sm space-y-3">
                <div class="flex gap-2">
                  <span class="text-emerald-500">→</span>
                  <span class="text-gray-400">npm run</span>
                  <span class="text-white">excellence</span>
                </div>
                <div class="text-gray-600 text-xs">Initializing digital experience...</div>
                <div class="flex gap-2">
                  <span class="text-emerald-500">✓</span>
                  <span class="text-gray-400">Design System</span>
                  <span class="text-emerald-400/70">loaded</span>
                </div>
                <div class="flex gap-2">
                  <span class="text-emerald-500">✓</span>
                  <span class="text-gray-400">Performance</span>
                  <span class="text-emerald-400/70">optimized</span>
                </div>
                <div class="flex gap-2">
                  <span class="text-emerald-500">✓</span>
                  <span class="text-gray-400">Conversion</span>
                  <span class="text-emerald-400/70">maximized</span>
                </div>
                <div class="pt-2 flex gap-2">
                  <span class="text-emerald-500">⚡</span>
                  <span class="text-white">Ready to elevate your brand</span>
                  <span class="animate-pulse">_</span>
                </div>
              </div>
           </div>
        </div>
      </div>
  </div>

  <!-- MANIFESTO -->
  <section class="py-32 border-y border-white/5 bg-gradient-to-b from-surface/50 to-background relative overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-white/5 via-transparent to-transparent"></div>
    <div class="container-custom relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="font-mono text-xs text-gray-500 uppercase tracking-[0.5em] mb-12 reveal">Il Manifesto</h2>
        <p class="text-2xl md:text-5xl font-bold uppercase leading-tight text-white reveal-scale">
          "Crediamo che ogni pixel debba guadagnarsi il suo posto. <span class="text-gray-600">Rifiutiamo i fronzoli.</span> Abbracciamo la pura funzionalità ed un'estetica senza tempo."
        </p>
      </div>
    </div>
  </section>

  <!-- VALUES -->
  <section class="py-32 container-custom">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16">
        <h2 class="text-4xl md:text-6xl lg:text-7xl font-black text-white reveal-scale">Valori</h2>
        <p class="text-sm font-mono text-gray-500 mt-4 md:mt-0 reveal">I pilastri del nostro lavoro.</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {values.map((val, idx) => (
        <div class={`group reveal-scale delay-${(idx + 1) * 100}`}>
          <div class="relative h-full bg-gradient-to-br from-white/[0.08] to-transparent border border-white/10 rounded-2xl p-8 transition-all duration-500 hover:border-white/30 hover:bg-white/[0.05] overflow-hidden">
            
            <!-- Gradient Glow -->
            <div class={`absolute -top-20 -right-20 w-40 h-40 bg-gradient-to-br ${val.color} rounded-full blur-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-700`}></div>
            
            <!-- Icon Badge -->
            <div class="w-12 h-12 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center mb-8 group-hover:bg-white/10 group-hover:border-white/20 transition-all duration-300 relative">
              <span class="font-mono text-sm font-bold text-gray-400 group-hover:text-white transition-colors">{val.icon}</span>
            </div>
            
            <h3 class="text-xl md:text-2xl font-bold uppercase mb-4 text-white group-hover:translate-x-1 transition-transform duration-300 relative">{val.title}</h3>
            <p class="font-mono text-sm text-gray-500 leading-relaxed group-hover:text-gray-400 transition-colors relative">
              {val.desc}
            </p>
            
            <!-- Bottom Border Animation -->
            <div class="absolute bottom-0 left-0 right-0 h-[2px] bg-gradient-to-r from-transparent via-white/50 to-transparent scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- CTA -->
  <section class="py-32 border-t border-white/5 relative overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-white/5 via-transparent to-transparent"></div>
    <div class="container-custom text-center relative z-10">
        <div class="inline-block p-1 rounded-full bg-gradient-to-r from-white/20 to-white/5 mb-8 reveal">
             <div class="bg-surface border border-white/10 px-10 py-4 rounded-full">
                 <span class="text-xs font-mono text-white tracking-widest uppercase">Join the resistance</span>
             </div>
        </div>
       <h2 class="text-4xl md:text-7xl font-black uppercase mb-10 text-white reveal-scale">
         Costruiamo <br/> il tuo impero.
       </h2>
       <a href="/contatti" class="btn-primary reveal">
         Parlaci del progetto
       </a>
    </div>
  </section>
</Layout>
