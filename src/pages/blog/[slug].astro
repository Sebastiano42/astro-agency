---
// src/pages/blog/[slug].astro
import Layout from '../../layouts/Layout.astro';
import { blogPosts } from '../../data/blog-posts';

export async function getStaticPaths() {
  return blogPosts.map(post => ({
    params: { slug: post.slug },
    props: { post }
  }));
}

const { post } = Astro.props;

// Related posts
const relatedPosts = blogPosts.filter(p => p.slug !== post.slug).slice(0, 2);

// Schema.org JSON-LD for Article
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": post.title,
  "description": post.excerpt,
  "image": post.image,
  "datePublished": post.date,
  "dateModified": post.date,
  "author": {
    "@type": "Organization",
    "name": post.author
  },
  "publisher": {
    "@type": "Organization",
    "name": "Studio Digitale",
    "logo": {
      "@type": "ImageObject",
      "url": new URL("/logo.png", Astro.site)
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": Astro.url.href
  },
  "articleSection": post.category,
  "wordCount": post.content.split(/\s+/).length,
  "inLanguage": "it-IT"
};
---

<Layout title={post.title} description={post.excerpt}>
  <!-- Schema.org JSON-LD for Article -->
  <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} slot="head" />
  <!-- Article Header -->
  <article class="pt-32 pb-20 md:pt-40">
    <div class="container-custom max-w-4xl">
      <!-- Breadcrumb -->
      <nav class="text-sm font-mono text-gray-500 mb-8 reveal">
        <a href="/" class="hover:text-white transition-colors">Home</a>
        <span class="mx-2">/</span>
        <a href="/blog" class="hover:text-white transition-colors">Blog</a>
        <span class="mx-2">/</span>
        <span class="text-gray-400">{post.slug}</span>
      </nav>

      <!-- Category & Read Time -->
      <div class="flex items-center gap-4 mb-6 reveal">
        <span class="px-4 py-1.5 bg-white/5 border border-white/10 rounded-full text-xs font-mono text-gray-400 uppercase tracking-wider">
          {post.category}
        </span>
        <span class="text-sm font-mono text-gray-500">
          {post.readTime} lettura
        </span>
      </div>

      <!-- Title -->
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-black text-white mb-8 leading-tight reveal-scale">
        {post.title}
      </h1>

      <!-- Meta Info -->
      <div class="flex items-center gap-6 pb-10 border-b border-white/10 reveal">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-full bg-gradient-to-br from-white/20 to-white/5 border border-white/10 flex items-center justify-center">
            <span class="text-sm font-bold text-white">{post.author[0]}</span>
          </div>
          <div>
            <p class="text-sm font-medium text-white">{post.author}</p>
            <p class="text-xs text-gray-500">{new Date(post.date).toLocaleDateString('it-IT', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
          </div>
        </div>
      </div>

      <!-- Featured Image Placeholder -->
      <div class="my-12 reveal">
        <div class="aspect-video bg-gradient-to-br from-white/[0.08] to-transparent border border-white/10 rounded-2xl overflow-hidden flex items-center justify-center">
          <svg class="w-20 h-20 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
      </div>

      <!-- Article Content -->
      <div class="prose prose-invert prose-lg max-w-none reveal">
        <div class="article-content" set:html={post.content} />
      </div>

      <!-- Share Buttons -->
      <div class="mt-16 pt-10 border-t border-white/10 reveal">
        <p class="text-sm font-mono text-gray-500 uppercase tracking-wider mb-6">Condividi</p>
        <div class="flex gap-4">
          <button onclick={`window.open('https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(Astro.url.href)}', '_blank')`} class="px-6 py-3 bg-white/5 border border-white/10 rounded-xl text-sm font-medium text-gray-400 hover:bg-white/10 hover:text-white hover:border-white/20 transition-all">
            Twitter
          </button>
          <button onclick={`window.open('https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}', '_blank')`} class="px-6 py-3 bg-white/5 border border-white/10 rounded-xl text-sm font-medium text-gray-400 hover:bg-white/10 hover:text-white hover:border-white/20 transition-all">
            LinkedIn
          </button>
          <button onclick={`window.open('https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}', '_blank')`} class="px-6 py-3 bg-white/5 border border-white/10 rounded-xl text-sm font-medium text-gray-400 hover:bg-white/10 hover:text-white hover:border-white/20 transition-all">
            Facebook
          </button>
        </div>
      </div>
    </div>

    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <div class="mt-32 pt-20 border-t border-white/5">
        <div class="container-custom max-w-6xl">
          <h2 class="text-3xl md:text-5xl font-black text-white mb-12 reveal">Articoli Correlati</h2>
          <div class="grid md:grid-cols-2 gap-8">
            {relatedPosts.map((related, idx) => (
              <a href={`/blog/${related.slug}`} class={`group reveal delay-${(idx + 1) * 100}`}>
                <article class="bg-gradient-to-br from-white/[0.08] to-transparent border border-white/10 rounded-2xl overflow-hidden transition-all duration-500 hover:border-white/30 hover:bg-white/[0.05]">
                  <!-- Image placeholder -->
                  <div class="aspect-video bg-gradient-to-br from-white/5 to-transparent flex items-center justify-center border-b border-white/10">
                    <svg class="w-12 h-12 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div class="p-8">
                    <span class="px-3 py-1 bg-white/5 border border-white/10 rounded-full text-xs font-mono text-gray-400 uppercase tracking-wider">
                      {related.category}
                    </span>
                    <h3 class="text-xl font-bold text-white mt-4 mb-3 group-hover:translate-x-1 transition-transform">
                      {related.title}
                    </h3>
                    <p class="text-sm text-gray-500 mb-4">{related.excerpt}</p>
                    <div class="flex items-center gap-3 text-xs text-gray-600">
                      <span>{new Date(related.date).toLocaleDateString('it-IT')}</span>
                      <span>•</span>
                      <span>{related.readTime}</span>
                    </div>
                  </div>
                </article>
              </a>
            ))}
          </div>
        </div>
      </div>
    )}

    <!-- CTA Section -->
    <div class="mt-32 pt-20 border-t border-white/5">
      <div class="container-custom text-center">
        <h2 class="text-3xl md:text-5xl font-black text-white mb-6 reveal">
          Hai un progetto <span class="text-gray-600">in mente?</span>
        </h2>
        <p class="text-lg text-gray-400 mb-10 reveal">
          Parliamone. Trasformiamo la tua idea in realtà.
        </p>
        <a href="/contatti" class="btn-primary reveal">
          Contattaci
        </a>
      </div>
    </div>
  </article>
</Layout>

<style>
  .article-content {
    @apply text-gray-300;
  }

  .article-content h2 {
    @apply text-3xl font-bold text-white mt-12 mb-6;
  }

  .article-content h3 {
    @apply text-2xl font-bold text-white mt-10 mb-4;
  }

  .article-content p {
    @apply mb-6 leading-relaxed;
  }

  .article-content ul,
  .article-content ol {
    @apply mb-6 space-y-2 pl-6;
  }

  .article-content ul {
    @apply list-disc;
  }

  .article-content ol {
    @apply list-decimal;
  }

  .article-content li {
    @apply text-gray-400;
  }

  .article-content strong {
    @apply text-white font-semibold;
  }

  .article-content blockquote {
    @apply border-l-4 border-white/20 pl-6 py-4 my-8 italic text-gray-400 bg-white/5 rounded-r-lg;
  }

  .article-content a {
    @apply text-blue-400 underline hover:text-blue-300 transition-colors;
  }

  .article-content code {
    @apply px-2 py-1 bg-white/10 border border-white/10 rounded text-sm font-mono text-white;
  }
</style>
