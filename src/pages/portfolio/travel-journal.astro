---
import Layout from '../../layouts/Layout.astro';
import htmlIcon from '../../assets/logos/html5.svg';
import cssIcon from '../../assets/logos/css-3.png';
import javascriptIcon from '../../assets/logos/javascript.svg';
import tailwindIcon from '../../assets/logos/tailwindcss.svg';
import figmaIcon from '../../assets/logos/figma.svg';
import wordpressIcon from '../../assets/logos/wordpress.svg';

const projectInfo = {
  title: "Travel Journal",
  category: "Content",
  client: "Wanderlust Mag",
  year: "2024",
  duration: "9 settimane",
  role: "Editorial Design & Development",
  color: "amber",
};

const techStack = [
  { name: "HTML5", icon: htmlIcon.src },
  { name: "CSS3", icon: cssIcon },
  { name: "JavaScript", icon: javascriptIcon.src },
  { name: "Tailwind CSS", icon: tailwindIcon.src },
  { name: "Figma", icon: figmaIcon.src },
  { name: "WordPress", icon: wordpressIcon.src },
];

const results = [
  { value: "+420", label: "Traffico Organico", suffix: "%" },
  { value: "6.5m", label: "Tempo Medio Lettura", suffix: "" },
  { value: "Top 3", label: "Keyword Posizionate", suffix: "" },
  { value: "+85", label: "Iscritti Newsletter", suffix: "%" },
];

const features = [
  {
    number: "01",
    title: "Tipografia Editoriale",
    description: "Sistema tipografico avanzato con font pairing studiato per la leggibilit&agrave; prolungata. Gerarchia visiva che guida il lettore attraverso articoli long-form con ritmo e respiro.",
    color: "from-amber-500/20 to-yellow-500/10",
    via: "via-amber-500/50",
  },
  {
    number: "02",
    title: "Layout Magazine Responsivo",
    description: "Griglia editoriale flessibile che si adatta a ogni formato: dal desktop widescreen allo smartphone. Ogni articolo ha un layout unico che riflette la destinazione raccontata.",
    color: "from-yellow-500/20 to-orange-500/10",
    via: "via-yellow-500/50",
  },
  {
    number: "03",
    title: "SEO & Content Strategy",
    description: "Architettura informativa ottimizzata per i motori di ricerca con schema markup, sitemap dinamica e strategia di internal linking che ha portato il sito in top 3 per keyword competitive.",
    color: "from-orange-500/20 to-amber-500/10",
    via: "via-orange-500/50",
  },
  {
    number: "04",
    title: "Esperienza di Lettura Immersiva",
    description: "Fotografie fullscreen con lazy loading progressivo, mappe interattive dei percorsi e una modalit&agrave; lettura notturna che riduce l'affaticamento visivo.",
    color: "from-amber-600/20 to-yellow-600/10",
    via: "via-amber-600/50",
  },
];

const gallery = [
  { label: "Homepage Editoriale", gradient: "from-amber-500/30 to-yellow-500/10" },
  { label: "Articolo Long-Form", gradient: "from-yellow-500/30 to-orange-500/10" },
  { label: "Galleria Fotografica", gradient: "from-orange-500/30 to-amber-500/10" },
  { label: "Mappa & Itinerari", gradient: "from-amber-600/30 to-yellow-600/10" },
];

const nextProject = {
  title: "E-commerce Luxury",
  category: "Sviluppo",
  href: "/portfolio/ecommerce-luxury",
  color: "from-blue-500 to-purple-500",
};

const caseStudySchema = {
  "@context": "https://schema.org",
  "@type": "CreativeWork",
  "name": "Travel Journal - Case Study",
  "author": {
    "@type": "Person",
    "name": "Sebastiano Moniaci"
  },
  "description": "Case study: magazine di viaggio editoriale per Wanderlust Mag. Tipografia avanzata, SEO strategy e +420% traffico organico.",
  "dateCreated": "2024",
  "genre": "Editorial Design & Content"
};
---

<Layout
  title="Travel Journal - Case Study"
  description="Case study: magazine di viaggio editoriale per Wanderlust Mag. Tipografia avanzata, SEO strategy e +420% traffico organico."
>
  <script type="application/ld+json" set:html={JSON.stringify(caseStudySchema)} slot="head" />

  <!-- HERO -->
  <section class="pt-32 pb-16 md:pt-48 md:pb-24 container-custom relative overflow-hidden">
    <div class="absolute inset-0 bg-grid-pattern opacity-20 pointer-events-none"></div>
    <div class="absolute top-[40%] left-[50%] -translate-x-1/2 -translate-y-1/2 w-[60vw] h-[60vw] max-w-[500px] max-h-[500px] bg-amber-500/5 rounded-full blur-[120px] pointer-events-none"></div>

    <div class="relative z-10">
      <a href="/portfolio" class="inline-flex items-center gap-2 text-gray-500 hover:text-white transition-colors mb-10 text-sm font-mono uppercase tracking-widest reveal">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Torna al Portfolio
      </a>

      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <div class="flex items-center gap-3 mb-6 reveal">
            <span class="inline-block px-4 py-2 rounded-full bg-amber-500/10 border border-amber-500/20 text-amber-400 text-xs font-mono uppercase tracking-widest">
              {projectInfo.category}
            </span>
            <span class="text-xs font-mono text-gray-600">{projectInfo.year}</span>
          </div>

          <h1 class="text-4xl sm:text-5xl md:text-7xl lg:text-8xl font-black text-white mb-8 tracking-tight leading-none reveal-scale">
            Travel<br/><span class="text-gray-600">Journal.</span>
          </h1>

          <p class="text-lg md:text-xl text-gray-400 leading-relaxed max-w-xl mb-10 reveal">
            Magazine editoriale per Wanderlust Mag. Tipografia avanzata, layout immersivo e strategia SEO che ha portato il sito ai vertici delle ricerche di viaggio in Italia.
          </p>

          <!-- Project Meta -->
          <div class="grid grid-cols-2 gap-6 reveal">
            <div>
              <span class="block text-[10px] font-mono uppercase tracking-widest text-gray-600 mb-1">Cliente</span>
              <span class="text-sm text-white font-medium">{projectInfo.client}</span>
            </div>
            <div>
              <span class="block text-[10px] font-mono uppercase tracking-widest text-gray-600 mb-1">Ruolo</span>
              <span class="text-sm text-white font-medium">{projectInfo.role}</span>
            </div>
            <div>
              <span class="block text-[10px] font-mono uppercase tracking-widest text-gray-600 mb-1">Durata</span>
              <span class="text-sm text-white font-medium">{projectInfo.duration}</span>
            </div>
            <div>
              <span class="block text-[10px] font-mono uppercase tracking-widest text-gray-600 mb-1">Anno</span>
              <span class="text-sm text-white font-medium">{projectInfo.year}</span>
            </div>
          </div>
        </div>

        <!-- Hero Mockup -->
        <div class="reveal-scale mockup-float-wrapper">
          <div class="glow-border mockup-float relative bg-gradient-to-br from-white/[0.08] to-transparent border border-white/10 rounded-2xl overflow-hidden shadow-2xl">
            <div class="absolute -top-24 -right-24 w-48 h-48 bg-gradient-to-br from-amber-500/20 to-yellow-500/10 rounded-full blur-3xl"></div>

            <!-- Browser Chrome -->
            <div class="flex items-center gap-2 px-4 py-3 border-b border-white/10 bg-white/[0.02]">
              <div class="flex gap-1.5">
                <span class="w-2 h-2 rounded-full bg-white/10"></span>
                <span class="w-2 h-2 rounded-full bg-white/10"></span>
                <span class="w-2 h-2 rounded-full bg-white/10"></span>
              </div>
              <div class="h-4 bg-white/5 rounded-full w-40 mx-auto flex items-center justify-center">
                <span class="text-[8px] font-mono text-gray-600">wanderlustmag.it</span>
              </div>
            </div>

            <!-- Mockup Content - Editorial Layout -->
            <div class="p-6 space-y-4">
              <!-- Hero Article -->
              <div class="aspect-[21/9] bg-gradient-to-br from-amber-500/10 to-yellow-500/5 rounded-lg border border-white/5 relative overflow-hidden">
                <div class="absolute inset-0 flex items-end p-4">
                  <div>
                    <div class="h-1 bg-amber-500/30 rounded w-8 mb-2"></div>
                    <div class="h-2 bg-white/20 rounded w-28 mb-1"></div>
                    <div class="h-1 bg-white/10 rounded w-20"></div>
                  </div>
                </div>
              </div>

              <!-- Article Grid -->
              <div class="grid grid-cols-2 gap-3">
                <div class="space-y-2">
                  <div class="aspect-[4/3] bg-gradient-to-br from-amber-500/5 to-transparent rounded-md border border-white/5"></div>
                  <div class="h-1.5 bg-white/10 rounded w-full"></div>
                  <div class="h-1 bg-white/5 rounded w-3/4"></div>
                </div>
                <div class="space-y-2">
                  <div class="aspect-[4/3] bg-gradient-to-br from-yellow-500/5 to-transparent rounded-md border border-white/5"></div>
                  <div class="h-1.5 bg-white/10 rounded w-full"></div>
                  <div class="h-1 bg-white/5 rounded w-2/3"></div>
                </div>
              </div>

              <!-- Bottom Bar -->
              <div class="flex items-center justify-between pt-2">
                <div class="flex gap-2">
                  <div class="h-1.5 bg-amber-500/20 rounded w-12"></div>
                  <div class="h-1.5 bg-white/5 rounded w-8"></div>
                </div>
                <div class="h-1.5 bg-white/10 rounded w-16"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- RESULTS / STATS -->
  <section class="py-20 md:py-24 border-y border-white/5 relative overflow-hidden">
    <div class="absolute inset-0 bg-grid-pattern opacity-30 pointer-events-none"></div>
    <div class="container-custom relative z-10">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-10 md:gap-16 text-center">
        {results.map((stat, index) => (
          <div class="reveal-scale" style={`transition-delay: ${(index + 1) * 100}ms`}>
            <div class="text-4xl md:text-6xl font-black text-white tracking-tight mb-2">
              {stat.value}<span class="text-amber-400">{stat.suffix}</span>
            </div>
            <div class="text-xs md:text-sm font-mono uppercase tracking-wider text-gray-500">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CHALLENGE & SOLUTION -->
  <section class="py-24 md:py-36 relative">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-16 md:gap-24">
        <!-- La Sfida -->
        <div class="reveal">
          <span class="inline-block px-4 py-2 rounded-full bg-white/5 border border-white/10 text-gray-400 text-xs font-mono uppercase tracking-widest mb-8">La Sfida</span>
          <h2 class="text-3xl md:text-4xl font-black text-white mb-6 leading-tight">
            Il racconto di viaggio meritava una veste editoriale premium.
          </h2>
          <div class="space-y-4 text-gray-400 leading-relaxed">
            <p>
              Wanderlust Mag, rivista di viaggi online con una community appassionata, aveva un sito datato che non rendeva giustizia alla qualit&agrave; dei contenuti. Gli articoli long-form erano penalizzati da un layout monotono e una tipografia trascurata.
            </p>
            <p>
              La sfida era creare un'esperienza di lettura che trasportasse il lettore nella destinazione raccontata, ottimizzando al contempo la visibilit&agrave; organica per competere con i grandi editori di settore.
            </p>
          </div>
        </div>

        <!-- La Soluzione -->
        <div class="reveal">
          <span class="inline-block px-4 py-2 rounded-full bg-amber-500/10 border border-amber-500/20 text-amber-400 text-xs font-mono uppercase tracking-widest mb-8">La Soluzione</span>
          <h2 class="text-3xl md:text-4xl font-black text-white mb-6 leading-tight">
            Ogni articolo, un'esperienza di viaggio.
          </h2>
          <div class="space-y-4 text-gray-400 leading-relaxed">
            <p>
              Ho riprogettato il magazine con un approccio editorial-first: ogni articolo ha un layout unico che riflette la destinazione, con tipografia avanzata studiata per sessioni di lettura prolungate e fotografie fullscreen che immergono il lettore nel racconto.
            </p>
            <p>
              La strategia SEO si basa su un'architettura informativa semantica, schema markup strutturato e un sistema di internal linking intelligente che ha portato il sito nelle prime 3 posizioni per decine di keyword di viaggio competitive.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- GALLERY / MOCKUPS -->
  <section class="py-24 md:py-36 border-y border-white/5 bg-gradient-to-b from-surface/50 to-background relative overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-amber-500/5 via-transparent to-transparent"></div>
    <div class="container-custom relative z-10">
      <div class="text-center mb-16 md:mb-20">
        <span class="inline-block px-4 py-2 rounded-full bg-white/5 border border-white/10 text-gray-400 text-xs font-mono uppercase tracking-widest mb-6 reveal">Showcase</span>
        <h2 class="text-4xl md:text-6xl font-black text-white reveal-scale">Design in Dettaglio</h2>
      </div>

      <div class="grid md:grid-cols-2 gap-6 md:gap-8">
        {gallery.map((item, index) => (
          <div class="group reveal-scale" style={`transition-delay: ${(index % 2 + 1) * 100}ms`}>
            <div class="glow-border relative bg-gradient-to-br from-white/[0.08] to-transparent border border-white/10 rounded-2xl overflow-hidden transition-all duration-500 hover:border-white/30 hover:bg-white/[0.05]">
              <!-- Image Placeholder -->
              <div class="aspect-video relative overflow-hidden bg-white/[0.02]">
                <div class={`absolute inset-0 bg-gradient-to-br ${item.gradient} opacity-30 group-hover:opacity-50 transition-opacity duration-500`}></div>
                <div class="absolute inset-0 flex items-center justify-center">
                  <svg class="w-16 h-16 text-white/10 group-hover:text-white/20 transition-colors duration-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
              </div>
              <!-- Label -->
              <div class="p-5">
                <span class="text-xs font-mono uppercase tracking-widest text-gray-500 group-hover:text-gray-300 transition-colors">{item.label}</span>
              </div>
              <div class="absolute bottom-0 left-0 right-0 h-[2px] bg-gradient-to-r from-transparent via-amber-500/50 to-transparent scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- KEY FEATURES -->
  <section class="py-24 md:py-36 relative">
    <div class="container-custom">
      <div class="text-center mb-16 md:mb-20">
        <span class="inline-block px-4 py-2 rounded-full bg-white/5 border border-white/10 text-gray-400 text-xs font-mono uppercase tracking-widest mb-6 reveal">Highlights</span>
        <h2 class="text-4xl md:text-6xl font-black text-white reveal-scale">Caratteristiche Chiave</h2>
      </div>

      <div class="grid md:grid-cols-2 gap-6 lg:gap-8">
        {features.map((feature, index) => (
          <div class="group reveal-scale" style={`transition-delay: ${(index % 2 + 1) * 100}ms`}>
            <div class="glow-border relative h-full bg-gradient-to-br from-white/[0.08] to-transparent border border-white/10 rounded-2xl p-8 transition-all duration-500 hover:border-white/30 hover:bg-white/[0.05] overflow-hidden">
              <div class={`absolute -top-20 -right-20 w-40 h-40 bg-gradient-to-br ${feature.color} rounded-full blur-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-700`}></div>

              <div class="relative mb-6">
                <div class="w-12 h-12 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center group-hover:bg-white/10 group-hover:border-white/20 transition-all duration-300">
                  <span class="font-mono text-sm font-bold text-gray-400 group-hover:text-white transition-colors">{feature.number}</span>
                </div>
              </div>

              <h3 class="text-xl md:text-2xl font-bold text-white mb-4 group-hover:translate-x-1 transition-transform duration-300 relative">
                {feature.title}
              </h3>
              <p class="text-sm md:text-base text-gray-500 leading-relaxed group-hover:text-gray-400 transition-colors relative">
                {feature.description}
              </p>

              <div class={`absolute bottom-0 left-0 right-0 h-[2px] bg-gradient-to-r from-transparent ${feature.via} to-transparent scale-x-0 group-hover:scale-x-100 transition-transform duration-500`}></div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- TECH STACK -->
  <section class="py-24 md:py-32 border-y border-white/5 bg-gradient-to-b from-surface/50 to-background">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="reveal">
          <span class="inline-block px-4 py-2 rounded-full bg-white/5 border border-white/10 text-gray-400 text-xs font-mono uppercase tracking-widest mb-8">Stack Tecnologico</span>
          <h2 class="text-3xl md:text-5xl font-black text-white mb-6 leading-tight">
            Tecnologie scelte<br/><span class="text-gray-600">con criterio.</span>
          </h2>
          <p class="text-gray-400 leading-relaxed max-w-lg">
            Uno stack editoriale ottimizzato per la velocit&agrave; di pubblicazione, la qualit&agrave; tipografica e il posizionamento organico. WordPress come CMS per la gestione contenuti, con un frontend su misura.
          </p>
        </div>

        <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
          {techStack.map((tech, index) => (
            <div class="group reveal-scale" style={`transition-delay: ${(index % 3 + 1) * 100}ms`}>
              <div class="relative bg-white/[0.03] border border-white/10 rounded-xl p-6 text-center transition-all duration-500 hover:border-white/20 hover:bg-white/[0.06] overflow-hidden">
                <img src={tech.icon} alt={tech.name} class="w-10 h-10 mx-auto mb-4 opacity-40 group-hover:opacity-80 transition-opacity duration-300" />
                <span class="text-xs font-mono uppercase tracking-wider text-gray-500 group-hover:text-gray-300 transition-colors">{tech.name}</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- TESTIMONIAL -->
  <section class="py-24 md:py-36 relative overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-white/5 via-transparent to-transparent"></div>
    <div class="container-custom relative z-10">
      <div class="max-w-3xl mx-auto text-center reveal">
        <!-- Decorative Quote -->
        <div class="text-8xl font-black text-white/[0.05] leading-none select-none pointer-events-none mb-4">"</div>

        <div class="flex justify-center gap-1 mb-8">
          {Array.from({ length: 5 }).map(() => (
            <svg class="w-5 h-5 text-amber-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          ))}
        </div>

        <blockquote class="text-xl md:text-2xl text-gray-300 leading-relaxed mb-10 italic">
          "Il nostro magazine &egrave; rinato. I lettori ci scrivono per dirci quanto amano leggere gli articoli sul nuovo sito &mdash; il tempo di permanenza &egrave; triplicato. Sebastiano ha trasformato un blog di viaggi in una vera rivista digitale. Il traffico organico parla da solo."
        </blockquote>

        <div class="flex items-center justify-center gap-4">
          <div class="w-12 h-12 rounded-full bg-gradient-to-br from-amber-500/30 to-yellow-500/20 border border-white/10 flex items-center justify-center">
            <span class="text-sm font-bold text-white">AV</span>
          </div>
          <div class="text-left">
            <p class="text-sm font-medium text-white">Andrea Vitali</p>
            <p class="text-xs text-gray-500">Direttore Editoriale, Wanderlust Mag</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- NEXT PROJECT -->
  <section class="py-20 md:py-28 border-t border-white/5 relative">
    <div class="container-custom">
      <div class="flex flex-col md:flex-row items-center justify-between gap-10 reveal">
        <div>
          <span class="text-xs font-mono uppercase tracking-widest text-gray-600 mb-3 block">Prossimo Progetto</span>
          <h3 class="text-3xl md:text-5xl font-black text-white">{nextProject.title}</h3>
          <span class="font-mono text-sm text-gray-500 mt-2 block">{nextProject.category}</span>
        </div>
        <a href={nextProject.href} class="group flex items-center gap-4 bg-white/5 border border-white/10 px-8 py-5 rounded-xl hover:bg-white hover:text-black transition-all duration-300">
          <span class="text-sm font-bold uppercase tracking-widest">Vedi Progetto</span>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="transform group-hover:translate-x-1 transition-transform">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-32 border-t border-white/5 bg-gradient-to-b from-surface/50 to-background relative overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_80%_60%_at_50%_50%,_var(--tw-gradient-stops))] from-amber-500/5 via-transparent to-transparent"></div>
    <div class="container-custom text-center relative z-10">
      <h2 class="text-4xl md:text-6xl lg:text-7xl font-black uppercase mb-6 text-white reveal-scale">
        Un progetto<br/>simile in mente?
      </h2>
      <p class="text-lg text-gray-400 max-w-xl mx-auto mb-10 reveal">
        Parliamone. Trasformo la tua visione in un'esperienza digitale che genera risultati concreti.
      </p>
      <a href="/contatti" class="btn-primary reveal">
        Discuti Progetto
      </a>
    </div>
  </section>
</Layout>
